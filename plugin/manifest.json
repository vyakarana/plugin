{
    "name": "pAnini-plugin",
    "description": "derivations of verb and noun forms based on Paninian rules",
    "version": "0.0.1.1",
    "permissions": ["alarms", "tabs",  "storage", "contextMenus", "*://*/*"],
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "css": ["popup/translit.css", "popup/popup.css"],
            "js": ["popup/content.js"]
        }
    ],
    "web_accessible_resources": [
        "data/fonts/*.*",
        "popup/img/indicator.gif"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "browser_action": {
        "default_icon" : "data/img/book.png",
        "default_title": "pAnini-plugin v.0.0.1"
    },
    "manifest_version": 2
}
